{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div id = "menu">
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <h1>Car34</h1>
            Welcome to Car34 car repairing service! You can plan an appointment, see your cars' status, and many other things here!<br />
            <a href="{{ path('register') }}">{{ 'Create a new account' }}</a> || <a href="{{ path('login') }}">{{ 'Login' }}</a> <br /><br />
            <a href="{{ path('faq') }}">{{ 'Frequently Asked Questions' }}</a>
        {% endif %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h1>Car34 - User menu</h1>
            <a href="{{ path('changePassword') }}">{{ 'Change password' }}</a>
        {% endif %}

    </div>
{% endblock %}
