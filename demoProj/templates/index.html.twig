{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div id = "menu">
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <div id = "name">Car34</div><br /><br /><br />
            <div id = "welcomeText">Welcome to Car34 car repairing service! You can plan an appointment,<br /> see your cars' status, and many other things here!</div><br />
            <a href="{{ path('register') }}"><div class = "button">REGISTER</div></a><a href="{{ path('login') }}"><div class = "button">LOGIN</div></a><br />
            <a href="{{ path('faq') }}">{{ 'Frequently Asked Questions' }}</a>
        {% endif %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h1>Car34 - User menu</h1>
            <a href="{{ path('changePassword') }}">{{ 'Change password' }}</a>
            {% if app.user.role == 2 %}
                <h1>Mechanic menu</h1>
                <a href="{{ path('editServiceTypes') }}">{{ 'Edit service types' }}</a> <br /><br />
                <a href="{{ path('clientListReview') }}">{{ 'See all clients' }}</a>
            {% endif %}
        {% endif %}

    </div>
{% endblock %}
