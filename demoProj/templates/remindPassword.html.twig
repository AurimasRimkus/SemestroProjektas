{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div id = "menu">
    <h1>Car34 - Remind password</h1>
        {# alerts rendering #}
        {% set formErrors = form.vars.errors.form.getErrors(true) %}
        {{ parent() }}

        {{ form_start(form) }}
            {% if action == "reset" %}
                Email: {{ form_widget(form.email) }}<br />
            {% else %}
                New password: {{ form_widget(form.password.first) }}<br />
                Repeat new password: {{ form_widget(form.password.second) }}<br />
            {% endif %}
        {{ form_start(form) }}
    {{ form(form, {'method': 'POST'}) }}
    <a href = "{{ path('login') }}">Back to login page</a>
    </div>
{% endblock %}
