{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
<div id = "menu">
    Car34 - Registered cars for service list<br />
    <br />
    <table align="center" bgcolor="gray">
        <tr>
            <th>User</th>
            <th>Date</th>
            <th>Car model</th>
            <th>Services</th>
            <th>Mark as done</th>
        </tr>
        {% for user in users %}
            {% for order in user.profile.getOrders() %}
                {% if not order.isDone %}
                    <tr>
                        <td>{{ user.profile.name }} {{ user.profile.secondName }}</td>
                        <td>{{ order.startDate|date("Y/m/d") }}</td>
                        <td>{{ order.car.model }}</td>
                        <td>
                            <a href="{{ 'showServices/' ~ order.getId}}">{{ 'Services' }}</a>
                        </td>
                        <td>
                            <a href="{{ 'changeIsDoneOrder/' ~ order.getId }}">{{ 'Select' }}</a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </table>
    <br />
    <a href="{{ path('index') }}">{{ 'Back to menu page' }}</a>
</div>
{% endblock %}
