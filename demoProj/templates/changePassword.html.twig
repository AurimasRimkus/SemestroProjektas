{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div id = "menu">
        <h1>Car34 - Password change</h1>

            {% if error is defined and error is not empty %}
                <div class="alert">
                    <span class="closeAlertButton">&times</span>
                    <strong>Error: </strong> {{ error }}
                </div>
            {% endif %}

            {% for error in form.vars.errors.form.getErrors(true) %}
                <div class="alert">
                    <span class="closeAlertButton">&times</span>
                    <strong>Error: </strong> {{ error.message|striptags }}
                </div>
            {% endfor %}
        {{ form_start(form) }}
            Current password: {{ form_widget(form.password) }}<br /><br />
            New password: {{ form_widget(form.newPassword.first) }}<br /><br />
            Repeat new password: {{ form_widget(form.newPassword.second) }}<br /><br />
        {{ form_end(form) }}

        <a href="{{ path('index') }}">{{ 'Back to menu page' }}</a>
    </div>
{% endblock %}
