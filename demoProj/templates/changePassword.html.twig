{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div id = "menu">
        <h1>Car34 - Password change</h1>
        {# alerts rendering #}
        {% set formErrors = form.vars.errors.form.getErrors(true) %}
        {{ parent() }}
        {{ form_start(form) }}
        <div class="col-sm-5 col-centered">
            Current password: {{ form_widget(form.password) }}<br />
        </div>
        <div class="col-sm-5 col-centered">
            New password: {{ form_widget(form.newPassword.first) }}<br />
        </div>
        <div class="col-sm-5 col-centered">
            Repeat new password: {{ form_widget(form.newPassword.second) }}<br />
        </div>
        {{ form_end(form) }}
        <a href="{{ path('profile') }}">{{ 'Go to your profile' }}</a>
    </div>
{% endblock %}
