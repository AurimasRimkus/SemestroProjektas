{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('assets/css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
<div id = "menu">
    {% if app.user.role == 2 %}
        <h1>Client list</h1>
        <a href="{{ path('index') }}">{{ 'Back to main menu' }}</a><br />
        <table align="center">
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Is Active</th>
                <th>Delete</th>
            </tr>
        {% for user in users %}
            {% if user.isDeleted == false %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email}}</td>
                    <td>{{ user.role }}</td>
                    <td>
                        {% if user.isActive == true %} <a href="{{ 'changeIsActive' ~ user.id }}">{{ 'deactivate' }}</a>
                        {% else %} <a href="{{ 'changeIsActive' ~ user.id }}">{{ 'activate' }}</a>
                        {% endif %}
                    </td>
                    <td>
                        {% if user.isDeleted == true %} deleted
                        {% else %} <a href="{{ 'deleteUser/' ~ user.id }}">{{ 'delete' }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
            {% endfor %}
        </table>
    {% else %}
        <h1>You don't have permission to do that.</h1>
        <a href="{{ path('index') }}">{{ 'Back to menu page' }}</a>
    {% endif %}
</div>
{% endblock %}
